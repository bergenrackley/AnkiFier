<Window x:Class="AnkiFier.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AnkiFier"
        mc:Ignorable="d"
        Title="MainWindow" Height="205" Width="426">
    <Grid Width="300" VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0" Grid.ColumnSpan="3"  IsEnabled="False" Name="FileLocation" Margin="10 0 10 10"/>
        <Button Grid.Row="1" Grid.Column="0" Name="PickImage" Click="PickImage_OnClick" Margin="10 0 5 0">Pick Image</Button>
        <Button Grid.Row="1" Grid.Column="1" Name="ScanImage" Click="ScanImage_OnClick" Margin="5 0 5 0">Scan</Button>
        <Button Grid.Row="1" Grid.Column="2" Name="OpenJson" Click="OpenJson_OnClick" Margin="5 0 10 0">Open Json</Button>
    </Grid>
</Window>
